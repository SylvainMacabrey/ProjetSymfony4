{% extends "layout/base.html.twig" %}

{% block body %}

    <div class="container" style="margin-top: 5.5em;">

        <form method="post" action="{{ path('activite.validFormAdd') }}">
            <div class="row">
                <fieldset class="center_div">
                    <legend>Créer une activité</legend>
                    <div class="form-group">
                        <label class="">Nom :</label>
                        <input class="form-control" name="nomActivite"  type="text"  size="18" value="{{donnees.nomActivite|default('')}}" />
                        {% if erreurs.nomActivite is defined %}
                            <small class="error">{{erreurs.nomActivite}}</small>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label>Date de création :</label>
                        <input class="form-control" name="dateCreation" type="text"  size="18" value="{{donnees.dateCreation|default('')}}" />
                        {% if erreurs.dateCreation is defined %}
                            <small class="error">{{erreurs.dateCreation}}</small>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label>Nombre d'inscription:</label>
                        <input class="form-control" name="countInscription"  type="text"  size="18" value="{{donnees.countInscription|default('')}}" />
                        {% if erreurs.countInscription is defined %}
                            <small class="error">{{erreurs.countInscription}}</small>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label>Type :</label>
                        <input class="form-control" name="type"  type="text"  size="18" value="{{donnees.type|default('')}}" />
                        {% if erreurs.type is defined %}
                            <small class="error">{{erreurs.type}}</small>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label>Localisation :</label>
                        <select class="form-control" name="localisationId">
                            {% if  donnees.localisationId is not defined or donnees.localisationId is empty   %}
                                <option value="">Veuillez sélectionner une localisation</option>
                            {% endif %}
                            {% for localisation in localisations %}
                                <option value="{{localisation.id}}"
                                        {% if donnees.localisationId is defined and localisation.id == donnees.localisationId %}selected{% endif %}>
                                    {{ localisation.nomLieu }}
                                </option>
                            {% endfor %}
                        </select>
                        {% if erreurs.localisationId is defined %}
                            <small class="error">{{erreurs.localisationId}}</small>
                        {% endif %}
                    </div>
                    <input type="hidden" name="token" value="{{ csrf_token('activite_add') }}">
                    <input type="submit" name="creerActivite" value="Créer" class="btn btn-primary"/>
                    <a class="btn btn-primary" href="{{ path('activite.index') }}" >Annuler</a>
                </fieldset>
            </div>
        </form>

    </div>

{% endblock %}